<%= form_with model: recipe, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Recipe Title" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter the recipe title", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Write a brief description of the recipe", rows: 3, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients, "Ingredients" %>
    <%= form.text_area :ingredients, class: "form-control", placeholder: "List the ingredients separated by commas or line breaks", rows: 5, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :instructions, "Instructions" %>
    <%= form.text_area :instructions, class: "form-control", placeholder: "Step-by-step instructions to prepare the recipe", rows: 8, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :category, "Category" %>
    <%= form.select :category, ["Breakfast", "Lunch", "Dinner", "Dessert", "Snack", "Beverage"], { prompt: "Select a category" }, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty, "Difficulty" %>
    <%= form.select :difficulty, ["Easy", "Medium", "Hard"], { prompt: "Select a difficulty level" }, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.submit  class: "btn btn-primary" %>
  </div>
<% end %>
